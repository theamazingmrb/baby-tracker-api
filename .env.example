# Environment
DJANGO_DEBUG=False

# Network Configuration
NETWORK_HOST=0.0.0.0
NETWORK_PORT=8000
WEB_PORT=80  # Port to expose on host machine

# Production settings
PRODUCTION_DOMAIN=your-domain.com  # Replace with your domain
FRONTEND_DOMAIN=your-domain.com    # Replace with your domain
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com,www.your-domain.com  # Add your domain and subdomains
CORS_ALLOWED_ORIGINS=http://your-domain.com,https://your-domain.com,http://www.your-domain.com,https://www.your-domain.com,http://localhost:3000

# Database settings
# PostgreSQL credentials (used by Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=baby_tracker

# Database settings
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Security settings
SECRET_KEY=your-secret-key-here

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# AWS settings (if using AWS)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region
